<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom theme attributes -->
    <declare-styleable name="expenseTrackerTheme">
        <attr name="expenseTrackerCardBackgroundColor" format="color"/>
    </declare-styleable>
    <!-- Attributes for PinCodeInputView -->
    <declare-styleable name="PinCodeInputView">
        <attr name="pinCodeInputLength" format="integer"/>
        <attr name="pinCodeInputDelayMillis" format="integer"/>
        <attr name="pinCodeInputVibrationEnabled" format="boolean"/>
        <attr name="pinCodeInputButtonTextStyle" format="reference"/>
        <attr name="pinCodeInputStarsTextStyle" format="reference"/>
        <attr name="pinCodeInputPinTextStyle" format="reference"/>
        <attr name="pinCodeInputStyle" format="reference"/>
        <attr name="pinCodeInputButtonColor" format="color"/>
        <attr name="pinCodeInputButtonSize" format="dimension"/>
        <attr name="pinCodeInputDelIconSize" format="dimension"/>
    </declare-styleable>

    <!-- Attributes for the DotIndicator -->
    <declare-styleable name="DotIndicator">
        <attr name="dotIndicatorActiveDotColor" format="color"/>
        <attr name="dotIndicatorInactiveDotColor" format="color"/>
        <attr name="dotIndicatorCompletedDotColor" format="color"/>
        <attr name="dotIndicatorActiveDotSize" format="dimension"/>
        <attr name="dotIndicatorInactiveDotSize" format="dimension"/>
        <attr name="dotIndicatorNumberOfDots" format="integer"/>
        <attr name="dotIndicatorActiveDot" format="integer"/>
        <attr name="dotIndicatorDotSpacing" format="dimension"/>
        <attr name="dotIndicatorStyle" format="reference"/>
        <attr name="dotIndicatorAnimTime" format="integer"/>
    </declare-styleable>

    <!-- Attributes for CircularProgressBar -->
    <declare-styleable name="CircularProgressBar">
        <attr name="circularProgressBarProgress" format="integer"/>
        <attr name="circularProgressBarBackgroundColor" format="color"/>
        <attr name="circularProgressBarForegroundColor" format="color"/>
        <attr name="circularProgressBarTextAppearance" format="reference"/>
        <attr name="circularProgressBarStyle" format="reference"/>
    </declare-styleable>

    <!-- Attributes for TransactionDetailsView -->
    <declare-styleable name="TransactionDetailsView">
        <attr name="transactionDetailStripColor" format="color"/>
        <attr name="transactionDetailEditIconColor" format="color"/>
        <attr name="transactionDetailDeleteIconColor" format="color"/>
        <attr name="transactionDetailTitleTextAppearance" format="reference"/>
        <attr name="transactionDetailLabelTextAppearance" format="reference"/>
        <attr name="transactionDetailTitle" format="string"/>
        <attr name="transactionDetailAmount" format="string"/>
        <attr name="transactionDetailDate" format="string"/>
        <attr name="transactionDetailCategory" format="string"/>
        <attr name="transactionDetailVenue" format="string"/>
        <attr name="transactionDetailViewStyle" format="reference"/>
        <attr name="transactionDetailPaymentMethod" format="enum">
            <enum name="cash" value="0"/>
            <enum name="card" value="1"/>
        </attr>
        <attr name="transactionType" format="enum">
            <enum name="income_one_time"     value="0"/>
            <enum name="income_regular"      value="1"/>
            <enum name="expense_one_time"    value="2"/>
            <enum name="expense_regular"     value="3"/>
            <enum name="income_plan"         value="4"/>
            <enum name="expense_plan"        value="5"/>
            <enum name="withdraw"            value="6"/>
            <enum name="deposit"             value="7"/>
        </attr>
    </declare-styleable>
</resources>