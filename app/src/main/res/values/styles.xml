<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <!-- Style for the PinCodeInputView -->
    <style name="Theme.ExpenseTracker.Widget.PinCodeInputView" parent="">
        <item name="pinCodeInputButtonTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputButtonText</item>
        <item name="pinCodeInputPinTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputPinText</item>
        <item name="pinCodeInputStarsTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputStarsText</item>
        <item name="pinCodeInputButtonColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputButtonText" parent="">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputPinText" parent="">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputStarsText" parent="">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the DotIndicator -->
    <style name="Theme.ExpenseTracker.Widget.DotIndicator" parent="">
        <item name="dotIndicatorInactiveDotSize">12dp</item>
        <item name="dotIndicatorActiveDotSize">16dp</item>
        <item name="dotIndicatorDotSpacing">8dp</item>
        <item name="dotIndicatorActiveDotColor">?attr/colorPrimary</item>
        <item name="dotIndicatorCompletedDotColor">?attr/colorPrimaryDark</item>
        <item name="dotIndicatorInactiveDotColor">@android:color/darker_gray</item>
        <item name="dotIndicatorAnimTime">@android:integer/config_mediumAnimTime</item>
    </style>

    <!-- Style for Initial Setup Title -->
    <style name="Theme.ExpenseTracker.TextAppearance.InitialSetupTitle" parent="">
        <item name="android:textSize">34sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for Initial Setup Subtitle -->
    <style name="Theme.ExpenseTracker.TextAppearance.InitialSetupSubtitle" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for pin code error messages -->
    <style name="Theme.ExpenseTracker.TextAppearance.ErrorInvalidPin" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- Style for the BottomNavigationView -->
    <style name="Theme.ExpenseTracker.Widget.BottomNavigationView" parent="">
        <item name="itemIconTint">?attr/expenseTrackerBottomNavItemColorSelector</item>
        <item name="itemTextColor">?attr/expenseTrackerBottomNavItemColorSelector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Style for the BottomAppBar -->
    <style name="Theme.ExpenseTracker.Widget.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="fabCradleMargin">@dimen/fab_cradle</item>
        <item name="fabCradleRoundedCornerRadius">@dimen/fab_cradle</item>
        <item name="fabCradleVerticalOffset">@dimen/fab_cradle</item>
    </style>

    <!-- Text appearance for drawer layout title -->
    <style name="Theme.ExpenseTracker.TextAppearance.DrawerLayoutTitle" parent="">
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Style for  CircularProgressBar -->
    <style name="Theme.ExpenseTracker.Widget.CircularProgressBar" parent="">
        <item name="circularProgressBarBackgroundColor">@color/circularProgressbarBackground</item>
        <item name="circularProgressBarForegroundColor">@color/primaryColor</item>
        <item name="circularProgressBarTextAppearance">@style/Theme.ExpenseTracker.TextAppearance.CircularProgressBarText</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.CircularProgressBarText" parent="">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the cards on Home page -->
    <style name="Theme.ExpenseTracker.CardLayout">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.CardLayoutInfoText" parent="">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.CardLayoutTitle" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.TotalBalance" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!-- Style for the TransactionDetailsView -->
    <style name="Theme.ExpenseTracker.Widget.TransactionDetailsView" parent="">
        <item name="transactionDetailTitleTextAppearance">@style/Theme.ExpenseTracker.TextAppearance.DetailTransactionDetailTitle</item>
        <item name="transactionDetailLabelTextAppearance">@style/Theme.ExpenseTracker.TextAppearance.DetailTransactionDetailLabel</item>
        <item name="transactionDetailDeleteIconColor">@color/colorGoalNotAchieved</item>
        <item name="transactionDetailCancelIconColor">@color/circularProgressbarBackground</item>
        <item name="transactionDetailEditIconColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.DetailTransactionDetailTitle" parent="">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.DetailTransactionDetailLabel" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for the settings -->
    <style name="Theme.ExpenseTracker.TextAppearance.SettingsTitle" parent="">
        <item name="android:textSize">18sp</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.SettingsDescription" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.SettingsTitleDisabled" parent="Theme.ExpenseTracker.TextAppearance.SettingsTitle">
        <item name="android:textColor">@color/settingsDisabledTitle</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.SettingsDescriptionDisabled" parent="Theme.ExpenseTracker.TextAppearance.SettingsDescription">
        <item name="android:textColor">@color/settingsDisabledDescription</item>
    </style>

    <!-- Style for ChangePinDialog -->
    <style name="Theme.ExpenseTracker.Dialog.FullScreen" parent="Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.ExpenseTracker.Dialog.FullScreen.Dark" parent="Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="colorPrimary">@color/primaryColorNight</item>
        <item name="colorPrimaryVariant">@color/primaryLightNight</item>
        <item name="colorPrimaryDark">@color/primaryDarkNight</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.ChangePinTitle" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.ChangePinSubtitle" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for exposed dropdown menus on primary color -->
    <style name="Theme.ExpenseTracker.Widget.ExposedDropDownMenuOnPrimary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?attr/expenseTrackerDropdownBackgroundColor</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>

    <!-- Dialog outlined text field -->
    <style name="Theme.ExpenseTracker.Widget.TextInputField.Outlined.Dark.OnDialog" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/material_on_surface_emphasis_medium</item>
        <item name="hintTextColor">@color/material_on_surface_emphasis_medium</item>
        <item name="boxBackgroundColor">@color/primaryColorNight</item>
    </style>

    <!-- Theme for add category dialog edit text -->
    <style name="Theme.ExpenseTracker.ThemeOverlay.DialogEditText" parent="">
        <item name="colorControlNormal">@color/material_on_surface_emphasis_medium</item>
        <item name="colorControlActivated">@color/material_on_surface_emphasis_medium</item>
    </style>

    <!-- Theme for dialogs -->
    <style name="Theme.ExpenseTracker.ThemeOverlay.MaterialAlertDialog.Dark" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <!-- Theme for date picker -->
    <style name="Theme.ExpenseTracker.ThemeOverlay.MaterialDatePicker.Dark" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>