<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <!-- Style for the PinCodeInputView -->
    <style name="Theme.ExpenseTracker.Widget.PinCodeInputView" parent="">
        <item name="pinCodeInputButtonTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputButtonText</item>
        <item name="pinCodeInputPinTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputPinText</item>
        <item name="pinCodeInputStarsTextStyle">@style/Theme.ExpenseTracker.TextAppearance.PinCodeInputStarsText</item>
        <item name="pinCodeInputButtonColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputButtonText" parent="">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputPinText" parent="">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="Theme.ExpenseTracker.TextAppearance.PinCodeInputStarsText" parent="">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the DotIndicator -->
    <style name="Theme.ExpenseTracker.Widget.DotIndicator" parent="">
        <item name="dotIndicatorInactiveDotSize">12dp</item>
        <item name="dotIndicatorActiveDotSize">16dp</item>
        <item name="dotIndicatorDotSpacing">8dp</item>
        <item name="dotIndicatorActiveDotColor">?attr/colorPrimary</item>
        <item name="dotIndicatorCompletedDotColor">?attr/colorPrimaryDark</item>
        <item name="dotIndicatorInactiveDotColor">@android:color/darker_gray</item>
        <item name="dotIndicatorAnimTime">@android:integer/config_mediumAnimTime</item>
    </style>

    <!-- Style for Initial Setup Title -->
    <style name="Theme.ExpenseTracker.TextAppearance.InitialSetupTitle" parent="">
        <item name="android:textSize">34sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for Initial Setup Subtitle -->
    <style name="Theme.ExpenseTracker.TextAppearance.InitialSetupSubtitle" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for pin code error messages -->
    <style name="Theme.ExpenseTracker.TextAppearance.ErrorInvalidPin" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- Style for the BottomNavigationView -->
    <style name="Theme.ExpenseTracker.Widget.BottomNavigationView" parent="">
        <item name="itemIconTint">@color/selector_bottom_nav_menu_item</item>
        <item name="itemTextColor">@color/selector_bottom_nav_menu_item</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Style for the BottomAppBar -->
    <style name="Theme.ExpenseTracker.Widget.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="fabCradleMargin">10dp</item>
        <item name="fabCradleRoundedCornerRadius">10dp</item>
        <item name="fabCradleVerticalOffset">10dp</item>
    </style>

    <!-- Text appearance for drawer layout title -->
    <style name="Theme.ExpenseTracker.TextAppearance.DrawerLayoutTitle" parent="">
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>