<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.diamont.expense.tracker.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.diamont.expense.tracker.StartupFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_startup" >
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_initialSetupFragment"
            app:destination="@id/initialSetupFragment" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.diamont.expense.tracker.authentication.AuthenticationFragment"
        android:label="fragment_authentication"
        tools:layout="@layout/fragment_authentication" />
    <fragment
        android:id="@+id/initialSetupFragment"
        android:name="com.diamont.expense.tracker.initialSetup.InitialSetupFragment"
        android:label="fragment_initial_setup"
        tools:layout="@layout/fragment_initial_setup" />
</navigation>