<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorNight</item>
        <item name="colorPrimaryVariant">@color/primaryLightNight</item>
        <item name="colorPrimaryDark">@color/primaryDarkNight</item>
        <item name="colorOnPrimary">@color/primaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/Theme.ExpenseTracker.Widget.BottomAppBar</item>
        <item name="bottomNavigationStyle">@style/Theme.ExpenseTracker.Widget.BottomNavigationView</item>
        <item name="pinCodeInputStyle">@style/Theme.ExpenseTracker.Widget.PinCodeInputView</item>
        <item name="pinCodeInputButtonSize">@dimen/pinInputButtonSize</item>
        <item name="pinCodeInputDelIconSize">@dimen/pinInputDelIconSize</item>
        <item name="dotIndicatorStyle">@style/Theme.ExpenseTracker.Widget.DotIndicator</item>
        <item name="circularProgressBarStyle">@style/Theme.ExpenseTracker.Widget.CircularProgressBar</item>
        <item name="transactionDetailViewStyle">@style/Theme.ExpenseTracker.Widget.TransactionDetailsView</item>

        <item name="expenseTrackerCardBackgroundColor">@color/primaryColorNight</item>
        <item name="expenseTrackerBackgroundColor">@color/backgroundNight</item>
        <item name="expenseTrackerDropdownBackgroundColor">@color/backgroundNight</item>
        <item name="expenseTrackerIconOnPrimaryColor">@color/circularProgressbarBackground</item>
        <item name="expenseTrackerTabTextColorSelector">@drawable/sel_tab_text_color_dark</item>
        <item name="expenseTrackerBottomNavItemColorSelector">@color/selector_bottom_nav_menu_item_dark</item>
        <item name="expenseTrackerDialogTextInputLayoutStyle">@style/Theme.ExpenseTracker.Widget.TextInputField.Outlined.Dark.OnDialog</item>


        <item name="alertDialogTheme">@style/Theme.ExpenseTracker.ThemeOverlay.MaterialAlertDialog.Dark</item>
        <item name="android:dialogTheme">@style/Theme.ExpenseTracker.Dialog.FullScreen.Dark</item>
        <item name="materialAlertDialogTheme">@style/Theme.ExpenseTracker.ThemeOverlay.MaterialAlertDialog.Dark</item>
        <item name="materialCalendarTheme">@style/Theme.ExpenseTracker.ThemeOverlay.MaterialDatePicker.Dark</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>




    </style>
</resources>