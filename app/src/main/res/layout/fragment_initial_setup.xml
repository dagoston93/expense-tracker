<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.diamont.expense.tracker.initialSetup.InitialSetupFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".initialSetup.InitialSetupFragment">

        <fragment
            android:id="@+id/initialSetupNavHostFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_initial_setup" />

        <com.diamont.expense.tracker.util.view.DotIndicator
            android:id="@+id/diDotIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dotIndicatorActiveDot="@{viewModel.activePage}"
            app:dotIndicatorNumberOfDots="7" />

    </LinearLayout>
</layout>